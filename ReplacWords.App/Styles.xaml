<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style x:Key="Style_Label_1" TargetType="Label"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="200"/>
    </Style>
    <Style x:Key="Style_Label_2" TargetType="Label"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="100"/>
    </Style>
    
    <Style x:Key="Style_Input_1" TargetType="TextBox"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="450"/>
    </Style>
    <Style x:Key="Style_Input_2" TargetType="TextBox"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="400"/>
    </Style>
    
    <Style x:Key="Style_Button" TargetType="Button"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="150"/>
    </Style>
    
    <Style x:Key="Style_ProgressBar" TargetType="ProgressBar"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Height" Value="20"/>
    </Style>
    
</ResourceDictionary>